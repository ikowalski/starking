                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="10dp"
            android:gravity="bottom|center_horizontal"
            android:textSize="10sp"
            android:textColor="#727272"
